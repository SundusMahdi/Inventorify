@{
    ViewData["Title"] = "Home Page";
}

<script src="~/js/InventoryList.js"></script>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Inventory</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="home" class="btn btn-info form-control text-white mt-2">
            Add New Item
        </a>
    </div>
    <div class="m-2" id="restockWarning"></div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Quanitity</th>
                    <th>Unit Price</th>
                    <th>Total Value</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>
